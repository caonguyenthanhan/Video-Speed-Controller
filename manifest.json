{
  "manifest_version": 3,
  "name": "Video Speed Controller",
  "version": "1.0.0",
  "description": "Điều khiển tốc độ video dễ dàng trên bất kỳ trang web nào",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Video Speed Controller",
    "default_icon": {
      "16": "Video Speed Controller.png",
      "32": "Video Speed Controller.png",
      "48": "Video Speed Controller.png",
      "128": "Video Speed Controller.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "Video Speed Controller.png",
    "32": "Video Speed Controller.png",
    "48": "Video Speed Controller.png",
    "128": "Video Speed Controller.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["Video Speed Controller.png"],
      "matches": ["<all_urls>"]
    }
  ]
}